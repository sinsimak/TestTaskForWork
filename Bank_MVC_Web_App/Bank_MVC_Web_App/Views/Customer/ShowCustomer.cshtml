@model Bank_MVC_Web_App.Models.Dto.CustomerDto
@{
    ViewBag.Title = "Клиент";
}

<h3>Клиент</h3>
@using ( Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-3">
            <p>Фамилия:</p>                   
        </div> 
        <div class="col-lg-8">
            @Model.LastName
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>Имя:</p>
        </div>
        <div class="col-lg-8">
            @Model.FirstName
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>Отчество:</p>
        </div>
        <div class="col-lg-8">
            @Model.MiddleName
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>Номер договора:</p>
        </div>
        <div class="col-lg-8">
            @Model.ContractNumber
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
            <p>Номер счёта:</p>
        </div>
        <div class="col-lg-8">
            @foreach (var accountNumber in Model.AccountNumberList)
            {
                <p>@accountNumber</p>
            }
        </div>
    </div>
}